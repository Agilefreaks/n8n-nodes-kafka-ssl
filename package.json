{
  "name": "n8n-nodes-ssl-kafka",
  "version": "0.1.0",
  "description": "Custom Kafka node that allows SSL Connection to Kafka Cluster",
  "keywords": [
    "n8n-community-node-package"
  ],
  "license": "MIT",
  "homepage": "",
  "author": {
    "name": "Popa Daniel",
    "email": "popa.daniel@agilefreaks.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agilefreaks/n8n-nodes-ssl-kafka.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/SslKafkaApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Kafka/SslKafka.node.js",
      "dist/nodes/Kafka/SslKafkaTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.6.0",
		"kafkajs": "^2.2.4",
    "tls": "0.0.1"
  }
}
